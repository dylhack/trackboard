<% content_for :title, t("session.login") %>
<div class="flex flex-col w-full h-96 justify-center gap-8 items-center">
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 text-red-500 font-medium rounded-lg text-center" id="alert"><%= alert %></p>
  <% end %>
  <%= image_tag asset_path("atriarchy-light.png"), class: "w-80 px-4 mt-4" %>
  <%= form_tag("/auth/discord", method: "post", data: { turbo: false }) do %>
    <button type="submit" class="clicky bg-violet-400 font-bold text-white rounded-md px-3 py-2 hover:bg-violet-300">Login with Discord</button>
  <% end %>
</div>
